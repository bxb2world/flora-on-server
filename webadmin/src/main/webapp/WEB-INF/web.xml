<?xml version="1.0" encoding="ISO-8859-1" ?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">

   <session-config>
      <session-timeout>100</session-timeout>
   </session-config>

   <listener>
       <listener-class>pt.floraon.server.Startup</listener-class>
   </listener>


   <welcome-file-list>
       <welcome-file>main</welcome-file>
   </welcome-file-list>

   <servlet>
      <servlet-name>ChecklistAdmin</servlet-name>
      <servlet-class>pt.floraon.taxonomy.ChecklistAdmin</servlet-class>
   </servlet>

   <servlet>
      <servlet-name>MainPage</servlet-name>
      <servlet-class>pt.floraon.server.MainPage</servlet-class>
   </servlet>

<!--
   <servlet>
      <servlet-name>RedListAdminPages</servlet-name>
      <servlet-class>pt.floraon.redlistdataistAdmin</servlet-class>
   </servlet>
-->

   <servlet>
      <servlet-name>UserLogin</servlet-name>
      <servlet-class>pt.floraon.authentication.UserLogin</servlet-class>
   </servlet>

   <servlet>
      <servlet-name>Query</servlet-name>
      <servlet-class>pt.floraon.taxonomy.Query</servlet-class>
   </servlet>

   <servlet>
      <servlet-name>Lists</servlet-name>
      <servlet-class>pt.floraon.taxonomy.Lists</servlet-class>
   </servlet>

   <servlet>
      <servlet-name>TaxDetails</servlet-name>
      <servlet-class>pt.floraon.taxonomy.TaxDetails</servlet-class>
   </servlet>

   <servlet>
      <servlet-name>Suggestions</servlet-name>
      <servlet-class>pt.floraon.server.Suggestions</servlet-class>
   </servlet>

   <servlet>
      <servlet-name>ApiUpdate</servlet-name>
      <servlet-class>pt.floraon.taxonomy.ApiUpdate</servlet-class>
   </servlet>

<!--
   <servlet>
      <servlet-name>GraphReader</servlet-name>
      <servlet-class>pt.floraon.server.GraphReader</servlet-class>
   </servlet>
-->

   <servlet>
      <servlet-name>NodeReader</servlet-name>
      <servlet-class>pt.floraon.taxonomy.NodeReader</servlet-class>
   </servlet>

   <servlet>
      <servlet-name>Territories</servlet-name>
      <servlet-class>pt.floraon.taxonomy.Territories</servlet-class>
   </servlet>

   <servlet>
      <servlet-name>FileUploader</servlet-name>
      <servlet-class>pt.floraon.taxonomy.FileUploader</servlet-class>
   </servlet>


   <servlet-mapping>
      <servlet-name>MainPage</servlet-name>
      <url-pattern>/main</url-pattern>
   </servlet-mapping>

   <servlet-mapping>
      <servlet-name>ChecklistAdmin</servlet-name>
      <url-pattern>/checklist</url-pattern>
   </servlet-mapping>

   <servlet-mapping>
      <servlet-name>UserLogin</servlet-name>
      <url-pattern>/login</url-pattern>
   </servlet-mapping>

   <servlet-mapping>
      <servlet-name>TaxDetails</servlet-name>
      <url-pattern>/checklist/api/taxdetails/*</url-pattern>
   </servlet-mapping>

   <servlet-mapping>
      <servlet-name>Suggestions</servlet-name>
      <url-pattern>/checklist/api/suggestions</url-pattern>
   </servlet-mapping>

   <servlet-mapping>
      <servlet-name>NodeReader</servlet-name>
      <url-pattern>/checklist/api/read/*</url-pattern>
   </servlet-mapping>

   <servlet-mapping>
      <servlet-name>ApiUpdate</servlet-name>
      <url-pattern>/checklist/api/update/*</url-pattern>
   </servlet-mapping>
   <!--
      <servlet-mapping>
         <servlet-name>GraphReader</servlet-name>
         <url-pattern>/graph/*</url-pattern>
      </servlet-mapping>
      -->
   <servlet-mapping>
      <servlet-name>Territories</servlet-name>
      <url-pattern>/checklist/api/territories/*</url-pattern>
   </servlet-mapping>

   <servlet-mapping>
      <servlet-name>Lists</servlet-name>
      <url-pattern>/checklist/api/lists/*</url-pattern>
   </servlet-mapping>

   <servlet-mapping>
      <servlet-name>Query</servlet-name>
      <url-pattern>/checklist/api/query</url-pattern>
   </servlet-mapping>

   <servlet-mapping>
      <servlet-name>FileUploader</servlet-name>
      <url-pattern>/upload/*</url-pattern>
   </servlet-mapping>

</web-app>
